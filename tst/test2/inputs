# Simulation time
# start time is assumed to be 0, unless re-starting
max_step  = 1500
stop_time = 0.00023
cfl = 0.3

# Geometry 
geometry.is_periodic = 0
geometry.coord_sys   = 0  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     = 0.0  
geometry.prob_hi     = 0.12 

# -1 = N/A (Incase of periodic)
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# 6 = user defined
cns.lo_bc = 4 -1 -1
cns.hi_bc = 2 -1 -1
cns.screen_output = 1 # 0=quiet, 1=verbose
cns.verbose = 1       # 0=quiet, 1=verbose

# Refinement and regridding 
amr.n_cell          = 128 
amr.max_level       = 1   # maximum level number allowed
amr.ref_ratio       = 2  # refinement ratio per level
amr.regrid_int      = 2  # how often to regrid per level
amr.blocking_factor_x = 8  # blocking factor in x per level
amr.blocking_factor_y = 8  # blocking factor in x per level
amr.blocking_factor_z = 8  # blocking factor in x per level
amr.max_grid_size_x   = 64  # maximum grid size in x per level
amr.max_grid_size_x   = 64  # maximum grid size in y per level
amr.max_grid_size_x   = 64  # maximum grid size in z per level
amr.n_error_buf     = 0  # number of buffer cells in error est
amr.grid_eff        = 0.7     # what constitutes an efficient grid
amr.v               = 0

# Plot and checkpoint
amr.checkpoint_files_output = 0
amr.check_file              = chk    # root name of checkpoint file
amr.check_int               = 100    # number of timesteps between checkpoints
amr.plot_files_output = 1
amr.plot_file         = plot/plt # root name of plotfile
amr.plot_per          = 0.00001  # physical time between plotfiles
amr.derive_plot_vars  = pressure velocity temperature

cns.order_rk = 3
cns.stages_rk = 3
cns.reactor_type = "ReactorCvode"  #moved to react_t
cvode.solve_type =  "fixed_point" #denseAJ_direct not available on GPU 
ode.clean_init_massfrac = 1
