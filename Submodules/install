AMREXVERSION=23.11
VERSION=v23.03
SUNDIALVERSION=6.6.2
case  $1 in
	git )
	echo " installing git versions .. "
	gh repo clone AMReX-Combustion/PelePhysics
	;;
	safe )
	echo " installing release version .." $AMREXVERSION
	wget https://github.com/AMReX-Codes/amrex/archive/refs/tags/23.11.zip
	unzip 23.11.zip
    mv amrex-23.11 amrex

	echo " installing release version .." $VERSION
	wget https://github.com/AMReX-Combustion/PelePhysics/archive/refs/tags/v23.03.zip
	unzip v23.03.zip
	mv PelePhysics-23.03 PelePhysics

	echo " installing release version .." $SUNDIALVERSION
	wget https://github.com/LLNL/sundials/archive/refs/tags/v6.6.2.zip
    unzip v6.6.2.zip
	mv sundials-6.6.2 sundials
	rm *.zip
        ;;
    *)
	echo " no option selected [git/safe]"
    exit
esac
echo -e "\\033[1;32m  Installation done \\033[0m"


