# Simulation time
# start time is assumed to be 0, unless re-starting
max_step  = 10000
stop_time = 0.001
#cfl = 0.1
time_step =1e-7

# Geometry 
geometry.is_periodic = 1 
geometry.coord_sys   = 0  # 0 => cart, 1 => RZ  2=>spherical
geometry.prob_lo     = 0  
geometry.prob_hi     = 1

# -1 = N/A (Incase of periodic)
# 0 = Interior           3 = Symmetry
# 1 = Inflow             4 = SlipWall
# 2 = Outflow            5 = NoSlipWall
# 6 = user defined
cns.lo_bc = -1 
cns.hi_bc = -1 
cns.screen_output = 1 # 0=quiet, 1=verbose
cns.verbose = 1       # 0=quiet, 1=verbose

# Refinement and regridding 
amr.n_cell          = 16 
amr.max_level       = 0     # maximum level number allowed
amr.ref_ratio       = 2    # refinement ratio per level
amr.regrid_int      = 100     # how often to regrid per level
amr.blocking_factor_x = 8   # blocking factor in x per level
amr.blocking_factor_y = 8   # blocking factor in y per level
amr.max_grid_size_x   = 64  # maximum grid size in x per level
amr.max_grid_size_y   = 64  # maximum grid size in y per level
amr.n_error_buf     = 4    # number of buffer cells in error est
amr.grid_eff        = 0.7   # what constitutes an efficient grid
amr.v               = 1

# Plot and checkpoint
amr.checkpoint_files_output = 0
amr.check_file              = chk    # root name of checkpoint file
amr.check_int               = 10000    # number of timesteps between checkpoints
amr.plot_files_output = 1
amr.plot_file         = plot/plt # root name of plotfile
amr.derive_plot_vars  = pressure velocity temperature
amr.plot_int          = 100           # number of timesteps between plotfiles

cns.order_rk = 3
cns.stages_rk = 3
cns.reactor_type = "ReactorCvode"
cvode.solve_type =  "fixed_point" #denseAJ_direct not available on GPU 
ode.clean_init_massfrac = 1

# DIAGNOSTICS
amr.data_log = probe.csv
cns.record_probe = 1
cns.time_probe_lev = 0
cns.time_probe_int = 1
cns.time_probes = Temperature
Temperature.field_name = temperature
Temperature.box_lo = 0.0
Temperature.box_hi = 1.0
